mixin hotel(hotel)

  .hotel
    .hotel_img
      a(href=`/all/${hotel._id}`)
        //- img(src=`/images/hotels/${hotel.image}`)
        img(src=`http://res.cloudinary.com/dx2bh212j/image/upload/${hotel.image}.jpg`)
    .hotel_info
      a(href=`/all/${hotel._id}`)
        h3= hotel.hotel_name
      hr
      if url.startsWith('/all/')  
        p=hotel.hotel_description
        hr
      p= `Start rating: ${hotel.star_rating}`
      p= `Country: ${hotel.country}`
      p= `Cost per night: $ ${hotel.cost_per_night}`